<section class="todoapp">
	<header class="header">
		<h1>Your Lists</h1>
		<!-- <input class="new-todo" placeholder="Make a new list" autofocus=""> -->
		<%= form_for(@list) do |f| %>
			<%= f.text_field :name, :class => "new-todo"%>
			<%= f.submit :style => "display: none" %>
		<% end %>
	</header>

	<section class="main">
		<ul class="todo-list">
			<% @lists.each do |list| %>
	      <li>
	        <div class="view">
	          <!-- <label><a href="#"><%= list.name %></a></label> -->
						<%#= list_path(list) %>
						<%#= list_url(list) %>
						<label><%= link_to list.name, list_path(list) %></a></label>

	        </div>
	      </li>
			<% end %>
    </ul>
	</section>

	<footer class="footer" style="display: block;">
	</footer>
</section>
